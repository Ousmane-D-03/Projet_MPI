graph petit_graphe {
    node [shape=circle, style=filled, color=lightyellow, fontcolor=black];
    edge [color=black, fontcolor=blue];

    // Nœuds
    A [label="A"];
    B [label="B"];
    C [label="C"];
    D [label="D"];
    E [label="E"];
    F [label="F"];

    // Arêtes avec poids
    A -- B [label="1", weight=1];
    A -- C [label="3", weight=3];
    B -- C [label="2", weight=2];
    B -- D [label="5", weight=5];
    C -- D [label="4", weight=4];
    C -- F [label="7", weight=7];
    D -- E [label="1", weight=1];
    E -- F [label="6", weight=6];
}
